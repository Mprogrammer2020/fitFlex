    <style name="Theme.Fitness" parent="Base.Theme.Fitness" />

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.rounded50" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
    <item name="cornerSize">10%</item>
   </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>

        <!-- Edit this colorControlNormal value as you need -->
        <item name="colorControlNormal">@color/viewColor</item>
         <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColorPrimary">@color/hintColor</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimesNumberPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>

        <!-- Edit this colorControlNormal value as you need -->
        <item name="colorControlNormal">@color/viewColor</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>


