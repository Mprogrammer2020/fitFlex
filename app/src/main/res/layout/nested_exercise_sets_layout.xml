<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/exerciseIcon"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginTop="15dp"
      app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
      android:src="@drawable/exercises_sets"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <TextView
      android:id="@+id/exercisesNameText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/lightBlack"
      android:fontFamily="@font/poppins_medium"
      android:textSize="12sp"
      android:text="@string/warm_up"
      android:layout_marginStart="14dp"
      android:layout_marginTop="22dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@+id/exerciseIcon" />

  <TextView
      android:id="@+id/timesText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="5:00"
      android:layout_marginTop="3dp"
      android:textSize="12sp"
      android:fontFamily="@font/poppins_medium"
      android:textColor="@color/grey"
      app:layout_constraintStart_toStartOf="@+id/exercisesNameText"
      app:layout_constraintTop_toBottomOf="@+id/exercisesNameText" />

  <ImageView
      android:id="@+id/forwardIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/arrow__right_circle"
      android:layout_marginEnd="5dp"
      app:layout_constraintBottom_toBottomOf="@+id/timesText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/exercisesNameText" />



</androidx.constraintlayout.widget.ConstraintLayout>