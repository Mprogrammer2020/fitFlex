<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blueBackgroundIcon"
        android:layout_width="75dp"
        android:layout_height="96dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_bg"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/whiteBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.rounded50"
        android:src="@drawable/circle_white_background"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/blueBackgroundIcon"
        app:layout_constraintEnd_toEndOf="@id/blueBackgroundIcon"
        app:layout_constraintTop_toTopOf="@+id/blueBackgroundIcon"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foodIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/salad_icon"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBackground"
        app:layout_constraintEnd_toEndOf="@+id/whiteBackground"
        app:layout_constraintStart_toStartOf="@+id/whiteBackground"
        app:layout_constraintTop_toTopOf="@+id/whiteBackground"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.rounded50" />


    <TextView
        android:id="@+id/foodTypeNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salad"
        android:textColor="@color/lightBlack"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/whiteBackground"
        app:layout_constraintStart_toStartOf="@+id/blueBackgroundIcon"
        app:layout_constraintEnd_toEndOf="@+id/blueBackgroundIcon"/>


</androidx.constraintlayout.widget.ConstraintLayout>