<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/sliderImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/slider_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/titleSliderText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleSliderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderImage"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/track_your_goal"
        android:textColor="@color/lightBlack"
        android:textSize="22sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionSliderText" />

    <TextView
        android:id="@+id/descriptionSliderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleSliderText"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/description"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>