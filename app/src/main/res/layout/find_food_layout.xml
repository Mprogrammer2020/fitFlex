<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingEnd="14dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blueRoundBackground"
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:background="@drawable/right_corner_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/foodItemsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/burger_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/blueRoundBackground" />

    <TextView
        android:id="@+id/breakfastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/breakfast"
        android:textColor="@color/lightBlack"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/foodItemsImg" />

    <TextView
        android:id="@+id/allFoodTypesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/_120_foods"
        android:textColor="@color/grey"
        android:layout_marginTop="2dp"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/breakfastText"
        app:layout_constraintTop_toBottomOf="@+id/breakfastText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/selectImg"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:text="@string/select"
        android:textColor="@color/white"
        android:background="@drawable/common_button_bg"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/breakfastText"
        app:layout_constraintTop_toBottomOf="@+id/allFoodTypesText" />


</androidx.constraintlayout.widget.ConstraintLayout>