<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CongratulationsFragment">

    <ImageView
        android:id="@+id/congratsIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/congrats"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/congratulationsIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/congratulations"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/lightBlack"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/congratsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_ecxcercise"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@+id/congratulationsIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>